<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context="com.example.cmtanvir.myedit.MainActivity"
    android:background="#f5e3e3">



    <EditText
        android:layout_margin="10dp"
        android:id="@+id/Text1ID"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="@string/edit_text1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:backgroundTint="#615b5b"/>
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/Text2ID"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="@string/edit_text2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:backgroundTint="#615b5b"


        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4">
    <Button
        android:layout_weight="1"
        android:id="@+id/addButtonId"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <Button
        android:layout_weight="1"
        android:id="@+id/subButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sub"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"/>
    <Button
        android:layout_weight="1"
        android:id="@+id/mulButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/multiply"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/divButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/division"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"/>

</LinearLayout>
    <TextView
        android:id="@+id/resId"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>


</LinearLayout>

